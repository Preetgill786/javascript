//reinforce the concept that in a loop(for or while)
//we can put calls to functions in the execution context
//let's do an example

function a(){ }
function b(){ }
function carryOnJatta(){ return true; }

for(a(); carryOnJatta() ; b()){
    console.log("Ki tympass aa");

}

let counter = 0;
function peanut(){
     counter++;
    if(counter >10){return false;}
    return true;
}
while(peanut()){

console.log(counter);
}
